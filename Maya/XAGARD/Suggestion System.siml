<?xml version="1.0" encoding="utf-8"?>
<Siml xmlns:Think="http://syn.co.in/2014/siml#think">
  <Concept Name="Suggestion System">

    <Model>
      <Pattern>*</Pattern>
      <Response>
        <User Think:Set="Suggest-For">
          <Match />
        </User>
        <Goto>#suggest</Goto>
      </Response>
    </Model>

    <!--<Model>
      <Pattern>*</Pattern>
      <Previous>:suggested</Previous>
